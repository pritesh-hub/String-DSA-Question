#include<iostream>
#include<algorithm>
using namespace std;

bool isAnagram(string str1,string str2)
{
    if(str1.length()!=str2.length())
    {
        return false;//cheak the length
    }
    sort(str1.begin(),str1.end());//sort the strings
    sort(str2.begin(),str2.end());
    
    for(int i=0;i<str1.length();i++)
    {
        if(str1[i]!=str2[i])//after sorting compare each character of string
        {
            return false;
        }
    }
return true;    
}
int main ()
{
    string str1 = "act";
    string str2 = "cat";
    if(isAnagram(str1,str2))
    {
        cout<<"its anagrma";
    }
    else
    {
        cout<<"not anagram";
    }
return 0;  
    
}
